#!/bin/bash

txtred=$(tput setaf 1)    # Red
txtrst=$(tput sgr0)       # Text reset

SOURCE_DIR=`pwd`

echo -e "Push\n  ${txtred}$SOURCE_DIR${txtrst}\nto\n  ${txtred}$1${txtrst}\n"

rsync --verbose --progress --stats --compress --rsh=/usr/bin/ssh --recursive --times --links --delete --exclude "coverage/*" --exclude "lsws-3.3.14/tmp/*" --exclude "cnuapp/tmp/*" $SOURCE_DIR/ $1:/export/web/working

