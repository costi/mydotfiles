filetype off
filetype plugin indent on

" Tabs
set tabstop=2
set smarttab
set shiftwidth=2
set autoindent
set expandtab

" Look and Feel
colorscheme ir_black 
syntax on
set cursorline
set number 

" Key Mappings
nmap <silent> <Leader>n :NERDTreeToggle<CR>
imap jj <Esc>
inoremap <tab> <c-n>

" Search
set ignorecase
set smartcase

" Status Line
set laststatus=2
set statusline+=%F
set statusline+=[%p%%]
set statusline+=%*
set ruler

" NERDTree Preferences
let NERDTreeShowBookmarks = 1
let NERDTreeShowHidden = 1
